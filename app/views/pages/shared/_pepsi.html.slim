    #carousel class="carousel slide hidden-md-up" data-ride="carousel"
      ol class="carousel-indicators"
        - for i in (0..2)
          - if (i == 0)
            li.active data-target="#carousel" data-slide-to="#{i}"
          -  else
            li data-target="#carousel" data-slide-to="#{i}"
      .carousel-inner role="listbox"
        - for i in (1..3)
          - if (i == 1)
            .carousel-item.active 
              img class="d-block img-fluid" src="#{image_path(i)}" alt="slide#{i}"
          - else
            .carousel-item 
              img class="d-block img-fluid" src="#{image_path(i)}" alt="slide#{i}"
              
    #mansory
      span class="carousel-control-prev-icon" aria-hidden="true" style="display: none;"
      span class="carousel-control-next-icon" aria-hidden="true" style="display: none;"

              
