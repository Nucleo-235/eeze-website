#parallax-container
  img src="#{image_path('logo-pepsi@big.png')}"
  ul#parallax-scene
     - if (@parallax)
       - for i in @parallax do
        li class="layer" data-depth="#{i[1]}"
          img src="#{image_path(i[0])}"

#scroll-project.hidden-lg-down = svg 'scroll-project'

